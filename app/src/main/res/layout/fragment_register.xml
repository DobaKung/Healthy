<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:hint="@string/username"
                    android:id="@+id/input_username"
                    android:fontFamily="@font/ubuntu"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_pin"
                    android:hint="@string/realname"
                    android:id="@+id/input_realname"
                    android:fontFamily="@font/ubuntu"
                    app:layout_constraintTop_toBottomOf="@+id/input_username"
                    android:layout_marginTop="8dp"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:hint="@string/age"
                    android:id="@+id/input_age"
                    android:fontFamily="@font/ubuntu"
                    app:layout_constraintTop_toBottomOf="@+id/input_realname"
                    android:layout_marginTop="8dp"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_key"
                    android:hint="@string/password"
                    android:id="@+id/input_password"
                    android:fontFamily="@font/ubuntu"
                    app:layout_constraintTop_toBottomOf="@+id/input_age"
                    android:layout_marginTop="8dp"
                    tools:layout_editor_absoluteX="20dp"/>
            <Button
                    android:text="@string/btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/input_password"
                    android:layout_marginTop="16dp"
                    android:id="@+id/btn_login"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/ubuntu"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>